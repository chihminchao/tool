[include]
    path = ~/.gitconfig.inc

[user]
    name = Chih-Min Chao
    email = cmchao@marvell.com

[alias]
    ama = am --abort
    amc = am --continue
    ap = apply
    br = branch --color
    bi = bisect
    bib = bisect bad
    big = bisect good
    ce = cvsexportcommit -c
    ci = commit
    cia = commit -a
    cio = commit -o
    ca = commit --amend
    co = checkout
    cp = cherry-pick
    cdf = clean -d -f
    ft = format-patch
    rbc = rebase --continue
    rba = rebase --abort
    sr = svn rebase
    sd = svn dcommit
    st = status -s
    sta = stash apply
    rb = rebase
    rbi = rebase -i
    rbi4 = rebase -i HEAD~4
    rbi9 = rebase -i HEAD~9
    rt = reset
    rth = reset --hard
    rth1 = reset --hard HEAD~1
    rth2 = reset --hard HEAD~2
    rth3 = reset --hard HEAD~3
    df = diff
    praise = blame 
    pull = pull --ff-only

[apply]
    whitespace = strip

[diff]
    color = auto
    rename = copy 

[pager]
    color = true 
    status = true

[status]
    color = auto

[core]
    excludesfile = /home/cmchao/.gitignore
    editor = /usr/bin/vim
    pager = less -FXRS

[push]
    default = tracking

[hooks]
    indent = /home/cmchao/tool/bin/astyle

